<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/shoe_card_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/shoe_image_1"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"/>
                            <TextView
                                android:id="@+id/shoe_name_1"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_toRightOf="@+id/shoe_image_1"/>
                            <TextView
                                android:id="@+id/last_sale_1"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/shoe_name_1"
                                android:layout_toRightOf="@+id/shoe_image_1"
                                android:textColor="@color/colorPrimary"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/shoe_card_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/shoe_image_2"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>
                    <TextView
                        android:id="@+id/shoe_name_2"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_toRightOf="@+id/shoe_image_2"/>
                    <TextView
                        android:id="@+id/last_sale_2"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/shoe_name_2"
                        android:layout_toRightOf="@+id/shoe_image_2"
                        android:textColor="@color/colorPrimary"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/shoe_card_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/shoe_image_3"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>
                    <TextView
                        android:id="@+id/shoe_name_3"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_toRightOf="@+id/shoe_image_3"/>
                    <TextView
                        android:id="@+id/last_sale_3"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/shoe_name_3"
                        android:layout_toRightOf="@+id/shoe_image_3"
                        android:textColor="@color/colorPrimary"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>